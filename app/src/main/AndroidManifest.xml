<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.victor.inventario">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/inventario"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/inventario"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inventario">
        <activity android:name=".Preferencias"></activity>
        <activity android:name=".Tarjeta" />
        <activity android:name=".Objeto_detalle" />
        <activity android:name=".Lista_Objetos" />
        <activity android:name=".Seleccion_objeto" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>